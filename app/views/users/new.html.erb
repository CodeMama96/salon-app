<p>First time here? create an account!</p>

<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit 'Create An Accoount' %>
    
<% end %>