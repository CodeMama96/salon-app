

<%= display_header %>
    <% @appointments.each do |appointment| %>
        <%= appointment.time.strftime("%l:%M %p") %>
        <%= appointment.date.strftime("%A, %b %d, %Y") %>
        <%= appointment.service.name%> by
        <%= appointment.user.name%>
        <% if current_user == appointment.user %>
            <%= button_to "delete", appointment_path(appointment), method: "delete"%>
        <%end%>
        <br><br>
<% end %> 


<%= link_to "Set an Appointment for this Service", new_service_appointment_path if params[:service_id]%><br><br>






